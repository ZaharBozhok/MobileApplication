<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="MobileApplication.Views.DetailPage"
             Title="{Binding Title}">
    <ScrollView>
        <StackLayout>
            <Label Text="{Binding CurrentVersion.CodeName}"/>
            <Label Text="{Binding CurrentVersion.VersionNumber}"/>
            <Label Text="{Binding CurrentVersion.InitialReleaseDate}"/>
            <Label Text="{Binding CurrentVersion.Description}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>